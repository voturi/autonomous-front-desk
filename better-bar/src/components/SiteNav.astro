---
const links = [
  { href: "/for-plumbers", label: "Plumbers" },
  { href: "/for-electricians", label: "Electricians" },
  { href: "/for-hvac", label: "HVAC" },
  { href: "/for-builders", label: "Builders" },
  { href: "/features/ai-call-handling", label: "Features" },
  { href: "/pricing", label: "Pricing" },
  { href: "/blog", label: "Blog" },
];
---

<nav class="border-b border-neutral-900/80">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-5">
    <a class="brand text-sm font-semibold uppercase tracking-[0.2em]" href="/">
      <span class="flex items-center gap-3">
        <span class="brand-text accent-text">NEXA</span>
      </span>
    </a>
    <div class="hidden items-center gap-6 text-sm text-neutral-300 md:flex">
      {links.map((link) => (
        <a class="hover:text-neutral-100 hover:underline hover:decoration-[rgba(212,175,55,0.5)] hover:underline-offset-4" href={link.href}>
          {link.label}
        </a>
      ))}
    </div>
    <div class="flex items-center gap-3">
      <a
        class="cta-button hidden rounded-full border border-[rgba(212,175,55,0.6)] px-4 py-2 text-xs font-semibold uppercase tracking-widest text-neutral-100 hover:border-[rgba(212,175,55,0.9)] hover:text-[#f5f2e9] md:inline-flex"
        href="/pricing"
      >
        Book Demo
      </a>
      <button
        class="inline-flex h-10 w-10 items-center justify-center rounded-full border border-neutral-800 text-neutral-200 md:hidden"
        type="button"
        aria-expanded="false"
        aria-controls="mobile-nav"
        data-mobile-toggle
      >
        <span class="sr-only">Toggle menu</span>
        <span class="block h-0.5 w-5 bg-neutral-200"></span>
        <span class="mt-1.5 block h-0.5 w-5 bg-neutral-200"></span>
      </button>
    </div>
  </div>
  <div
    id="mobile-nav"
    class="hidden border-t border-neutral-900/80 px-6 py-6 text-sm text-neutral-300 md:hidden"
    data-mobile-menu
  >
    <div class="flex flex-col gap-4">
      {links.map((link) => (
        <a class="hover:text-neutral-100" href={link.href}>
          {link.label}
        </a>
      ))}
      <a
        class="cta-button mt-2 inline-flex w-fit rounded-full border border-[rgba(212,175,55,0.6)] px-4 py-2 text-xs font-semibold uppercase tracking-widest text-neutral-100 hover:border-[rgba(212,175,55,0.9)] hover:text-[#f5f2e9]"
        href="/pricing"
      >
        Book Demo
      </a>
    </div>
  </div>
</nav>

<script>
  const toggle = document.querySelector("[data-mobile-toggle]");
  const menu = document.querySelector("[data-mobile-menu]");

  if (toggle && menu) {
    toggle.addEventListener("click", () => {
      const isOpen = toggle.getAttribute("aria-expanded") === "true";
      toggle.setAttribute("aria-expanded", String(!isOpen));
      menu.classList.toggle("hidden");
    });
  }
</script>
